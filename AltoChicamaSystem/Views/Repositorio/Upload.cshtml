@{
    ViewData["Title"] = "Upload";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <!-- JS Libraries -->
    <script src="~/lib/jquery-3.6.0/jquery-3.6.0.min.js"></script>

    <!-- JS Personalizado -->
    <script src="~/config.js"></script>
</head>

<body>
    <section class="home">
        <div class="text"></div>
        <div>
            <h2>File Upload & PDF Preview</h2>
            <p class="lead">No Plugins <b>Just Javascript</b></p>

            <!-- Container for the upload form -->
            <div class="bordered-box">
                <!-- Upload -->
                <form id="file-upload-form" class="uploader">
                    <input id="file-upload" type="file" name="fileUpload" accept="application/pdf" />

                    <label for="file-upload" id="file-drag">
                        <div id="pdf-preview" class="hidden">
                            <i class="far fa-file-pdf" aria-hidden="true" style="font-size: 100px;"></i>
                            <p id="pdf-file-name"></p>
                        </div>
                        <div id="start">
                            <div id="notpdf" class="hidden">Selecciona un archivo PDF</div>
                            <span id="file-upload-btn" class="btn btn-primary">Select a file</span>
                        </div>
                        <div id="response" class="hidden">
                            <div id="messages"></div>
                            <progress class="progress" id="file-progress" value="0">
                                <span>0</span>%
                            </progress>
                        </div>
                    </label>
                    <!-- Added Submit Button -->
                    <button type="submit" id="upload-btn" class="btn btn-success">Upload PDF</button>
                </form>
            </div>

            <!-- producto_familia y producto_grupo -->
            <div class="input-group input-group-sm mb-3">
                <label class="input-group-text" for="input_empresa">Empresa</label>
                <select class="form-select" id="input_empresa"></select>
            </div>
        </div>
    </section>
    <script defer src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc" crossorigin="anonymous"></script>
</body>
</html>
