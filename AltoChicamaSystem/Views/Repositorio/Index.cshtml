@{
    ViewData["Title"] = "Repositorio";
    Layout = "~/Views/Shared/_Layout2.cshtml";}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/empresa.css">
<link rel="stylesheet" href="~/css/documentos.css">
<link rel="stylesheet" href="~/css/alert.css">
<!-- JS Libraries -->
<script src="~/lib/jquery-3.6.0/jquery-3.6.0.min.js"></script>

<!-- JS Personalizado -->
<script src="~/config.js"></script>

<section class="home">
    <main>
        <div class="row" style="margin:0px">
            <div class="subscribe">
                <br>
                <div class="submit-btn">DOCUMENTOS</div>
            </div>

            <div class="container mt-2">
                <div class="row align-items-center">
                    <div class="col-md-7 d-flex justify-content-end">
                        <label class="input-group-text" for="input_empresa">Empresa</label>
                        <select class="form-select" id="input_empresa">
                            <!-- Opciones de empresa -->
                        </select>
                    </div>

                    <div class="col-md-3 d-flex justify-content-end">
                        <label class="input-group-text" for="input_estado">Estado</label>
                        <select class="form-select" id="input_estado">
                            <option value="" disabled selected>Seleccionar el estado</option>
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                    </div>

                    <div class="col-md-2 d-flex justify-content-end p-0">
                        <button id="btnConsultar" class="btn btn-primary me-2 bg-custom">Consultar</button>
                        <button id="btnConsultar2" class="btn btn-primary bg-custom" onClick="window.location.reload(true)">
                            <i class='bx bx-refresh'></i>
                        </button>
                    </div>
                </div>
            </div>



            <div style="padding-bottom: 9px;">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <table class="table table-sm custom-table" id="table_empresa">
                                <thead style="color: #023E73;">
                                    <tr>
                                        <th style="text-align: center; vertical-align: middle;">N° de Certificado</th>
                                        <th style="width: 370.688px;text-align: center; vertical-align: middle;">Nombre del Documento</th>
                                        <th style="text-align: center; vertical-align: middle;">Nombre de Empresa</th>
                                        <th style="text-align: center; vertical-align: middle;">Transportista</th>
                                        <th style="text-align: center; vertical-align: middle;">Matrícula(s)</th>
                                        <th style ="text-align: center; vertical-align: middle;width:65px;">Estado</th>
                                        <th style="text-align: center; vertical-align: middle;">Ver PDF</th>
                                        <th style="text-align: center; vertical-align: middle;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="tb_documento"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script defer src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc" crossorigin="anonymous"></script>
    <script type="text/javascript" src="~/lib/jquery-3.6.0/jquery-3.6.0.min.js"></script>
    <script src="~/js/js_jquery.dataTables.min.js"></script>
    <script src="~/config.js"></script>
    <script src="~/js/repositorio.js?v=0.0.3.8"></script>
</section>